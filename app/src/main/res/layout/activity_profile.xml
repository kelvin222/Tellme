<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <include
        android:id="@+id/Pro_page_toolbar"
        layout="@layout/app_bar_layout" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Pro_page_toolbar"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/setup_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/setup_name"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="Tellme Username"
                        android:textColor="@color/colorBlackPrimary"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/setup_avt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/setup_name"
                        android:fontFamily="cursive"
                        android:text="About"
                        android:textColor="@color/colorBlackPrimary"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/setup_sta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/setup_avt"
                        android:layout_marginTop="0dp"
                        android:fontFamily="cursive"
                        android:text="Residing State"
                        android:textColor="@color/colorBlackPrimary"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/setup_sta"
                        android:animateLayoutChanges="true"
                        tools:ignore="VectorDrawableCompat">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">


                            <ImageButton
                                android:id="@+id/tagbtn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite"
                                app:srcCompat="@drawable/round_person_add_black_36" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">


                            <ImageButton
                                android:id="@+id/untag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite"
                                app:srcCompat="@drawable/round_person_add_disabled_black_36" />
                        </LinearLayout>

                    </RelativeLayout>


                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
    android:id="@+id/cardiep"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/cardie"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/setup_sta"
                    android:animateLayoutChanges="true"
                    tools:ignore="VectorDrawableCompat">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">


                            <TextView
                                android:id="@+id/rev"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"

                                android:textAlignment="center"
                                android:textColor="@color/colorBlackPrimary"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/s1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="reviews"
                                android:textColor="@color/colorBlackPrimary"
                                android:textSize="16sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">


                            <TextView
                                android:id="@+id/aud"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textAlignment="center"
                                android:textColor="@color/colorBlackPrimary"
                                android:textSize="30sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/s2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="audience"
                                android:textColor="@color/colorBlackPrimary"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="94dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">


                            <TextView
                                android:id="@+id/tag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textAlignment="center"
                                android:textColor="@color/colorBlackPrimary"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/s4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="tagged"
                                android:textAlignment="center"
                                android:textColor="@color/colorBlackPrimary"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/profile_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cardiep"/>


</RelativeLayout>